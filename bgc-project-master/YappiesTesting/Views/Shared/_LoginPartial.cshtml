@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right" style="margin-bottom: -2.3em; margin-top: -2em;">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="color: white; font-size:1em;">Hello <span class="glyphicon glyphicon-user" style="font-size:1em;"></span>@UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link" style="color:white; font-size:0.8em;">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <body style="background-color: rgba(0, 255, 144, 0.3);">
        <div class="panel panel-default" id="LoginBox" style="margin-top: 9em;">
            <div class="panel-heading">
                <h3 class="panel-title" style="text-align: center; text-transform: uppercase; font-weight: bold;">Welcome!</h3>
            </div>
            <div class="panel-body" style="display: flex; justify-content: center;">
                <div class="container-fluid" style="width: 100%; text-align:center;">
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-success" style="width: 6.4em;">Login</a>
                    <br />
                    <h6 style="text-align: center;">Or</h6>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary" style="width: 6.5em;">Register</a>
                    <hr style="border-width: 1px;" />
                    <button type="button" class="btn btn-link"><img class="googleSignIn" src="~/images/googlesignin.png" alt="google sign in" style="height: 5vh; width: 20vh; position: center;" /></button>
                </div>
            </div>
        </div>
    </body>
}