@model IEnumerable<YappiesTesting.Models.ProgramSupervisor>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Program Supervisors</h1>

<form asp-action="Index">
    <div id="body">
        <div class="form-horizontal">
            <button class="btn btn-success" type="button" data-toggle="collapse" id="filterToggle" data-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
                Filter/Search
            </button>
            <div class="collapse @(ViewData["Filtering"]) well" id="collapseFilter">
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="control-label col-md-7">Search by Supervisor's Name:</label>
                            <div class="col-md-5">
                                @Html.TextBox("SearchString", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-7">Search by Email:</label>
                            <div class="col-md-5">
                                @Html.TextBox("SearchEmail", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-7">Search by Phone:</label>
                            <div class="col-md-5">
                                @Html.TextBox("SearchPhone", null, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <input type="submit" name="actionButton" value="Filter" class="btn btn-primary" />
                    <a asp-action="Index">Clear</a>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-body" style="overflow-y:scroll; height:78vh; max-height:78vh; padding:0;">
        @foreach (var item in Model)
        {
            <a asp-action="Details" asp-route-id="@item.ID" style="text-decoration:none; color:black; cursor:auto; margin-top:0px;">
                <div class="container-fluid" style="margin-top:20px; padding:0;">
                    <div class="panel panel-default" style="margin:0; padding:0;">
                        <div style="padding-left:10px;">
                            <h2 style="margin-bottom:5px; margin-top:10px;">@Html.DisplayFor(modelItem => item.Supervisor)</h2>
                            <p style="margin-top:5px; margin-bottom:0px; padding:5px;">@Html.DisplayFor(modelItem => item.Email)</p>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
    </div>
</form>
