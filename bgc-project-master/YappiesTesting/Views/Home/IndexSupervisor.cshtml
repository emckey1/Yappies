@model YappiesTesting.Models.ProgramSupervisor
@{
    ViewData["Title"] = "Home Page";
    int programCount = Model.Programs.Count();
    int announcementCount = 1;
}


<div style="padding:0.5vh; background-color:#e0e0e0">
<div class="container" id="body" style="padding:0px;">
    <div class="panel panel-default" style="margin: 0px">
        <div class="panel-heading">
            <h3 class="text-center" style="padding:0; margin:0;">Dashboard</h3>
        </div>
        <div style="overflow-y:scroll; max-height:35vh;">

        </div>
    </div>
    <div class="panel panel-default" style="width: 100%; margin-bottom:0.5vh;">
        <div class="panel-heading">
            <h3 class="panel-title">Announcements</h3>
        </div>
        <div style="overflow-y:scroll; max-height:35vh;">
            <ul class="list-group">
                @foreach (var item in Model.Programs)
                {
                    @foreach (var announcement in item.Announcements)
                    {
                        <li class="list-group-item">
                            <h4>@Html.DisplayFor(modelItem => announcement.Title)<span class=" pull-right">#@announcementCount</span></h4>
                            <p>@Html.DisplayFor(modelItem => announcement.Body)</p>
                        </li>
                        announcementCount++;
                    }
                }
                @foreach (var item in ViewBag.Announcements)
                {
                    <li class="list-group-item">
                        <h4>@item.Title<span class=" pull-right">#@announcementCount</span></h4>
                        <p>@item.Body</p>
                    </li>
                    announcementCount++;
                }
            </ul>
        </div>
    </div>
</div>
<div class="container" style="padding:0px;">
    <div class="panel panel-default" style="width: 100%; margin-bottom:0.5vh;">
        <div class="panel-heading">
            <h3 class="panel-title">Your Programs</h3>
        </div>
        <div style="overflow-y:scroll; max-height:50vh;">
            <ul class="list-group">
                @foreach (var item in Model.Programs)
                {
                    <a asp-action="Details" asp-route-id="@item.ID" asp-controller="Programs" asp-route-ProgramSupervisorID="@Model.ID" style="text-decoration:none; color:black; cursor:auto; margin-top:0px;">
                        <li class="list-group-item">
                            <h4>@Html.DisplayFor(modelItem => item.ProgramName)</h4>
                            <p>@Html.DisplayFor(modelItem => item.ProgramDescription)</p>
                        </li>
                    </a>
                }
            </ul>
        </div>
    </div>
</div>
</div>
<div class="messageContainer" style="max-height:20vh; width: 100%;">
    <div class="panel-footer">
        <h4 class="panel-title">
            <span class="glyphicon glyphicon-envelope"></span><a asp-controller="Conversations" asp-action="IndexPS"> Messages</a>
        </h4>
    </div>
    <div class="panel-footer">
        <h4 class="panel-title">
            <a asp-controller="" asp-action=""><span class="glyphicon glyphicon-exclamation-sign"></span>   Program Join Requests</a>
        </h4>
    </div>
    <div class="panel-footer">
        <h4 class="panel-title">
            <a asp-controller="" asp-action="" asp-route-id=""><span class="glyphicon glyphicon-wrench"></span>   Settings</a>
        </h4>
    </div>
</div>
