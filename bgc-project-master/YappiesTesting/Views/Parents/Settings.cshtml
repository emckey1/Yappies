@model YappiesTesting.Models.Parent
@{
    ViewData["Title"] = "Settings";
}

<head runat="server">
    <title></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
</head>

<body>
    <div style="background-color:#e0e0e0">
        <div class="panel-group">
            <form asp-action="Settings">
                <input type="hidden" asp-for="ID" />
                <input type="hidden" asp-for="RowVersion" />
                <input type="hidden" asp-for="FirstName" />
                <input type="hidden" asp-for="LastName" />
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Phone" />
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">
                            <a data-toggle="collapse" href="#collapseNotifications">Push Notifications</a>
                        </h2>
                    </div>
                    <div id="collapseNotifications" class="panel-collapse collapse in">
                        <ul class="list-group" style="margin: 0px">
                            <li class="list-group-item row">
                                <h4 class="col-xs-8" data-toggle="tooltip" data-placement="top" title="Opt in or out of app notifications.">Notifications</h4>
                                <div class="col-xs-4">
                                    @if (Model.NotificationOptIn)
                                    {
                                        <label style="float:right;" class="switch">
                                            <input asp-for="NotificationOptIn" type="checkbox" checked data-toggle="toggle">
                                        </label>

                                    }
                                    else
                                    {
                                        <label style="float:right;" class="switch">
                                            <input asp-for="NotificationOptIn" type="checkbox" data-toggle="toggle">
                                        </label>
                                    }
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">
                            <a data-toggle="collapse" href="#collapsePrivacy">Privacy & Account</a>
                        </h2>
                    </div>
                    <div id="collapsePrivacy" class="panel-collapse collapse in">
                        <ul class="list-group">
                            <li class="list-group-item row">
                                <h4 class="col-xs-4" data-toggle="tooltip" data-placement="top" title="Toggle to signout of your account after a period.">Signout After</h4>
                                <div class="col-xs-5">
                                    <select class="form-control" id="sel1">
                                        <option>30 Minutes</option>
                                        <option>1 Hour</option>
                                        <option>12 Hours</option>
                                        <option>1 Day</option>
                                    </select>
                                </div>
                                <div class="col-xs-3">
                                    @if (Model.SignOutOptIn)
                                    {
                                        <label style="float:right;" class="switch">
                                            <input asp-for="SignOutOptIn" type="checkbox" checked data-toggle="toggle">
                                        </label>

                                    }
                                    else
                                    {
                                        <label style="float:right;" class="switch">
                                            <input asp-for="SignOutOptIn" type="checkbox" data-toggle="toggle">
                                        </label>
                                    }
                                </div>
                            </li>
                            <li class="list-group-item row">
                                <h4 class="col-xs-8" data-toggle="tooltip" data-placement="top" title="Toggle third-party two-factor signin for extra security.">Two-Factor Authentication</h4>
                                <div class="col-xs-4">
                                    @if (Model.TwoFactorOptIn)
                                    {
                                        <label style="float:right;" class="switch">
                                            <input asp-for="TwoFactorOptIn" type="checkbox" checked data-toggle="toggle">
                                        </label>

                                    }
                                    else
                                    {
                                        <label style="float:right;" class="switch">
                                            <input asp-for="TwoFactorOptIn" type="checkbox" data-toggle="toggle">
                                        </label>
                                    }
                                </div>
                            </li>
                            <li class="list-group-item row">
                                <h4 class="col-xs-8" data-toggle="tooltip" data-placement="top" title="Toggle the ability to receive direct messages.">Direct Messages</h4>
                                <div class="col-xs-4">
                                    @if (Model.DirectMessageOptIn)
                                    {
                                        <label style="float:right;" class="switch">
                                            <input asp-for="DirectMessageOptIn" type="checkbox" checked data-toggle="toggle">
                                        </label>

                                    }
                                    else
                                    {
                                        <label style="float:right;" class="switch">
                                            <input asp-for="DirectMessageOptIn" type="checkbox" data-toggle="toggle">
                                        </label>
                                    }
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="panel-footer">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="float: right">Back</a>
                </div>
            </form>
        </div>
    </div>
</body>