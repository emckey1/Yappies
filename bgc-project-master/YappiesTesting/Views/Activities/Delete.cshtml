@model YappiesTesting.Models.Activity

@{
    ViewData["Title"] = "Delete";
}
<div id="body">
    <h1 class="text-center">Delete Activity</h1>
    <div class="panel panel-default" style="margin-top: .5vh">
        <div class="panel-heading">
            <h3 class="panel-title">
                Delete Activity
            </h3>
        </div>
        <div class="panel-body" style="margin: 0; padding:0">
            <ul class="list-group">
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.Title)</strong><br />
                    @Html.DisplayFor(model => model.Title)
                </li>
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.Description)</strong><br />
                    @Html.DisplayFor(model => model.Description)
                </li>
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.Date)</strong><br />
                    @Html.DisplayFor(model => model.Date)
                </li>
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.Program)</strong><br />
                    @Html.DisplayFor(model => model.Program.ProgramName)
                </li>
            </ul>
        </div>
        <div class="panel-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="ID" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
    <a asp-action="Index" class="btn btn-primary"><span class="glyphicon glyphicon-arrow-left"></span></a>
</div>
