@model IEnumerable<YappiesTesting.Models.Activity>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Activites</h1>

<form asp-action="Index">
    <div id="body">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">All Activities</h3>
            </div>
            <div class="form-horizontal">
                <button class="btn btn-success" type="button" data-toggle="collapse" id="filterToggle" data-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
                    Filter/Search
                </button>
                <div class="collapse @(ViewData["Filtering"]) well" id="collapseFilter">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label class="control-label col-md-4">Search by Activity Name:</label>
                                <div class="col-md-5">
                                    @Html.TextBox("SearchString", null, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Select by Program:</label>
                        <div class="col-md-3">
                            @Html.DropDownList("ProgramID", null, "All Programs", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <input type="submit" name="actionButton" value="Filter" class="btn btn-primary" />
                        <a asp-action="Index">Clear</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-body" style="overflow-y:scroll; height:78vh; max-height:78vh; padding:0;">
            @foreach (var item in Model)
            {
                <a asp-action="Details" asp-route-id="@item.ID" style="text-decoration:none; color:black; cursor:auto; margin-top:0px;">
                    <div class="container-fluid" style="margin:0; padding:0;">
                        <div class="panel panel-default" style="margin:0; padding:0;">
                            <div style="padding-left:10px;">
                                <h2 style="margin-bottom:5px; margin-top:10px">@Html.DisplayFor(modelItem => item.Title)</h2>
                                <h3 style="margin-top:5px; margin-bottom:0px">@Html.DisplayFor(modelItem => item.Date)</h3>
                                <h4 style="margin-top:5px; margin-bottom:0px">@Html.DisplayFor(modelItem => item.Program.ProgramName)</h4>
                                <hr />
                                <p>@Html.DisplayFor(modelItem => item.Description)</p>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
        <div class="panel-footer">
            <a asp-action="Create" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span>  New Activity</a>
        </div>
    </div>
</form>
